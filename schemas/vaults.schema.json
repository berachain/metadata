{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "pattern": "^\\.\\./.+\\.schema\\.json$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "categories": {
      "type": "array",
      "minLength": 1,
      "items": {
        "type": "object",
        "required": ["slug"],
        "properties": {
          "slug": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "This is a description of the category. It is intended to be used for documentation purposes."
          },
          "subcategories": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["slug"],
              "properties": {
                "slug": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "protocols": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "logoURI": {
            "type": "string",
            "pattern": "^(https://raw.githubusercontent.com/berachain/metadata/[^\\s]+|https://(assets|coin-images).coingecko.com/[^\\s]+|https://res.cloudinary.com/duv0g402y/[^\\s]+)$"
          },
          "url": {
            "type": "string",
            "pattern": "^(https://[^\\s]+)$"
          },
          "description": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "description": "This is an array of tags. Currently used for UI purposes.",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["name", "url", "description", "logoURI"]
      }
    },
    "vaults": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "stakingTokenAddress": {
            "type": "string",
            "pattern": "^0x[a-fA-F0-9]{40}$"
          },
          "vaultAddress": {
            "type": "string",
            "pattern": "^0x[a-fA-F0-9]{40}$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "action": {
            "type": "string",
            "description": "This is how the vault will be called on BeraHub. It should be a verb (e.g. Stake into...).",
            "minLength": 1
          },
          "protocol": {
            "type": "string",
            "minLength": 1
          },
          "logoURI": {
            "type": "string",
            "pattern": "^(https://raw.githubusercontent.com/berachain/metadata/[^\\s]+|https://(assets|coin-images).coingecko.com/[^\\s]+|https://res.cloudinary.com/duv0g402y/[^\\s]+)$"
          },
          "url": {
            "type": "string",
            "pattern": "^(https://[^\\s]+)$"
          },
          "categories": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "$comment": "This is an array of categories. If it is present, it must have exactly one item. It's an array for future proofing.",
            "minItems": 1,
            "maxItems": 1
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "stakingTokenAddress",
          "vaultAddress",
          "name",
          "protocol",
          "url"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": ["name", "protocols", "vaults", "$schema", "categories"]
}
